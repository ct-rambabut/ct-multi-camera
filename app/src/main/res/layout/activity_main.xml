<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

<!--app:layout_constraintDimensionRatio="1:1"-->
    <com.example.multicameralibrary.camera.CameraView
        android:id="@+id/camera_testing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        app:layout_constraintDimensionRatio="1:1"

        app:cameraAudio="on"
        app:cameraAutoFocusMarker="@string/cameraview_default_autofocus_marker"
        app:cameraEngine="camera2"
        app:cameraExperimental="true"
        app:cameraFacing="back"
        app:cameraFlash="on"
        app:cameraGestureLongTap="none"
        app:cameraGesturePinch="zoom"
        app:cameraGestureScrollHorizontal="filterControl1"
        app:cameraGestureScrollVertical="exposureCorrection"
        app:cameraGestureTap="autoFocus"
        app:cameraGrid="off"
        app:cameraMode="picture"
        app:cameraPlaySounds="true"
        app:cameraPreview="glSurface"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bonnet_open_grey"
            android:layout_gravity="center"
            app:layout_drawOnPictureSnapshot="false"
            app:layout_drawOnPreview="true"
            app:layout_drawOnVideoSnapshot="false" />

        <ImageView
            android:id="@+id/watermark_logo"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/adroit_watermark"
            android:layout_gravity="bottom"
            app:layout_drawOnPictureSnapshot="true"
            app:layout_drawOnPreview="true"
            app:layout_drawOnVideoSnapshot="true"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_margin="10dp"
            android:paddingLeft="60dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="I will be recorded!"
            android:textColor="@android:color/holo_red_dark"
            app:layout_drawOnPictureSnapshot="true"
            app:layout_drawOnPreview="true"
            app:layout_drawOnVideoSnapshot="true"
            />


    </com.example.multicameralibrary.camera.CameraView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_videocam_black_24dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_camera_alt_black_24dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@id/fab_video"
        app:layout_constraintEnd_toStartOf="@id/fab_video"
        app:layout_constraintTop_toTopOf="@id/fab_video" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_camera_front_black_24dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@id/fab_video"
        app:layout_constraintEnd_toStartOf="@id/fab_picture"
        app:layout_constraintTop_toTopOf="@id/fab_video" />

</androidx.constraintlayout.widget.ConstraintLayout>